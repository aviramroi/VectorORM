{
  "name": "@vectororm/adapter-chroma",
  "version": "0.1.1",
  "description": "ChromaDB adapter for VectorORM",
  "author": "Aviram Roisman",
  "license": "Apache-2.0",
  "homepage": "https://github.com/aviramroi/VectorORM",
  "repository": {
    "type": "git",
    "url": "https://github.com/aviramroi/VectorORM.git",
    "directory": "packages/adapter-chroma"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "files": ["dist", "README.md"],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts"
  },
  "dependencies": {
    "@vectororm/core": "*",
    "chromadb": "^1.8.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "@vectororm/core": "^0.1.0"
  },
  "keywords": [
    "vectororm",
    "chroma",
    "chromadb",
    "vector-database",
    "adapter"
  ]
}
